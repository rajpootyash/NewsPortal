<br>
<div class="Flex">
@foreach (var item in ViewBag.DigitalNews)
{
   
<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img class="imgLetest" loading="lazy" src="@item.Url@item.Server_CoverPath">
        </div>
        <div class="col-md-8">
            <div class="card-body" id="CardSDigitalNews" style=" ">
                <h5 class="card-title">@item.NewsTitle</h5>
               
                <p class="card-text"><small class="text-body-secondary"><button onclick="GetNews(@item.NewsID)" class="btn btn-outline-danger">और पढ़ें</button></small></p>
            </div>
        </div>
    </div>
</div>
}
    </div>
<script>
    function GetNews(Id) {
        window.location.href = `/Home/News?Id=${Id}`

    }
</script>



