@model List<NewsPortal.Models.CategriesSubCategries>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewsLayout.cshtml";
}
<style>
    :root {
        --boxShadow--: 0px 0px 9px 3px #54313152;
    }

    img {
        width: 100%;
        aspect-ratio: 1 / 0.5;
    }

    .MainDiv {
        position: relative;
        overflow: hidden;
        opacity: 0.8;
        padding: 0.5rem;
        box-shadow: var(--boxShadow--);
        border-radius: 6px;
    }

        .MainDiv div {
            padding-left: 1rem;
            position: absolute;
            top: 8rem;
            padding-right: 1rem;
            /* margin-left: 1rem; */
            font-size: 1rem;
            font-family: fangsong;
            color: #fff;
        }

    .Headding {
        color: #fff;
        background: #003366;
        padding: 0.3rem;
        border-radius: 8px;
        box-shadow: var(--boxShadow--);
    }

    .imgLetest {
        width: 13rem;
        height: 7rem;
        padding: 0.5rem;
    }

    .LetesTitle {
        width: 13rem;
        padding: 0.5rem;
        overflow: hidden;
        height: 5rem;
    }

    .LetestNewsChild {
        overflow: hidden;
        height: 13rem;
        box-shadow: var(--boxShadow--);
        border-radius: 6px;
    }

    .LetestNews {
        gap: 1rem;
        display: flex;
        flex-wrap: wrap;
    }

    .LetestNewsChild:hover {
        transform: scale(1.1);
        transition: all;
        transition-duration: 0.2s;
    }
    .card:hover {
        transform: scale(1.04);
        transition: all;
        transition-duration: 0.2s;
    }
    .card {
        box-shadow: var(--boxShadow--);
    }
    .Flex {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
    }
    .card-title {
        overflow: hidden;
        height: 2.2rem;
        font-size: 1rem;
    }
    #CardSDigitalNews {
        margin-left: 1.5rem;
    }
    @@media (max-width: 575.98px) {
        #CardSDigitalNews {
            height: 6rem !important;
            padding-top: 0 !important;
            margin-left:0rem;
        }
    }

    @@media (min-width: 576px) and (max-width: 767.98px) {
        #card-bodyDigita {
            height: 6rem !important;
            padding-top: 0 !important;
        }
    }

    .card-bodyDigital {
        overflow: hidden;
        margin-left: 1rem;
        height: 7rem;
    }


</style>
@* Top 8 News *@
@Html.Raw(ViewBag.HtmlString)
<br>
<p class="Headding ">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bar-chart-line-fill" viewBox="0 0 16 16">
        <path d="M11 2a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3h1V7a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7h1z" />
        @* Top 8 News *@
    </svg>&nbsp;&nbsp; लेटेस्ट न्यूज
</p>
<br/>

<div class="LetestNews">
    @foreach (var item in ViewBag.LetestNews)
    {
        <div class="LetestNewsChild" onclick="GetNews(@item.NewsID)"><img class="imgLetest" src="@item.Url@item.Server_CoverPath" loading="lazy"><div class="LetesTitle">@item.NewsTitle</div></div>

    }
</div>
<br/>


<p class="Headding">
